html
  height 100%

body
  font 14px "Lato", Helvetica, Arial, sans-serif
  background-color black
  color white
  text-align center
  height 100%
  margin 0

a
  color #00B7FF

.utilisation-container
  width 100%
  height 100%
  background-color black
  margin auto
  position relative
  overflow hidden

.utilisation
  width 2000px
  height 2000px
  background-color #000
  position absolute
  top 50%
  left 50%
  transform-origin 50% 0
  margin-left -1000px
  transition all 1s ease

.utilisation-change
  position relative

h1
  font-size 100px
  font-size 36vw
  margin 18px 0 0 0
  margin 7.5vw 0 0 0

h2
  font-size 30px
  font-size 11vw
  margin 0
  text-transform uppercase

p.dates-listed
  margin 5px 0 10px
  margin 2vw 0 3.5vw
  font-size 20px
  font-size 7.5vw
  text-transform uppercase
  letter-spacing 9px

p.last-month
  margin-top 70px
  margin-top 22.5vw
  font-size 25px
  font-size 8.5vw
  font-weight normal
  opacity 0.7

p.last-month strong
  font-weight bold
  font-size 30px
  font-size 11vw
